version: '3'

networks:
  default:
    driver: bridge

volumes:
  data:
    driver: local

services:
  controller:
    image: leapsolutionsasia/auto-scaling
    hostname: controller
    networks:
      - default
    restart: always
    volumes:
      - data:/auto-scaling
      - .:/auto-scaling/tmp
    command: python -u controller/controller.py
